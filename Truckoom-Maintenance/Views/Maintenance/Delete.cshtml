@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Truckoom_Maintenance.DTOS.MaintenanceActivityDeleteDto

@{
    ViewData["Title"] = "Delete";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Maintenance Activity Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Vehicle Number:</dt>
                        <dd class="col-sm-8">@Model.VehicleNumber</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaintenanceType):</dt>
                        <dd class="col-sm-8">@Model.MaintenanceType</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ActivityDate):</dt>
                        <dd class="col-sm-8">@Model.ActivityDate</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description):</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Notes):</dt>
                        <dd class="col-sm-8">@Model.Notes</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
                <img src="/Images/hero-section-img.png" alt="Truckhoom Hero Image" class="card-img-top img-fluid" />
        </div>
    </div>
</div>
