@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Truckoom_Maintenance_DAL.Model.MaintenanceActivity>

@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container table-container">
    <div class="row">
        <div class="col-md-12">
            <h2>Maintenance Activity History</h2>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Vehicle Number</th>
                            <th>Maintenance Type</th>
                            <th>Activity Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.VehicleNumber</td>
                                <td>@item.MaintenanceType</td>
                                <td>@item.ActivityDate.ToShortDateString()</td>
                                <td>
                                    <a asp-controller="Maintenance" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-actions">Details</a>
                                    <a asp-controller="Maintenance" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-actions">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <a asp-controller="Maintenance" asp-action="Create" class="btn btn-primary">Submit New Maintanance Query</a>
        </div>
    </div>
</div>
